@model ABMWeb.Models.MainPage

@{
    ViewData["Title"] = "GetMainPage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4">CV Update</h2>
<hr />

@using(Html.BeginForm("UpdateMainPage", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new{@class = "form-control", @readonly = "readonly"})
    <br />
    @Html.LabelFor(x => x.Name)
    @Html.TextBoxFor(x => x.Name, new{@class = "form-control"})
    <br />
    @Html.LabelFor(x => x.Profile)
    @Html.TextBoxFor(x => x.Profile, new{@class = "form-control"})
    <br />
    @Html.LabelFor(x => x.Title)
    @Html.TextBoxFor(x => x.Title, new{@class = "form-control"})
    <br />
    @Html.LabelFor(x => x.Explanation)
    @Html.TextBoxFor(x => x.Explanation, new{@class = "form-control"})
    <br />
    @Html.LabelFor(x => x.Experiences)
    @Html.TextBoxFor(x => x.Experiences, new{@class = "form-control"})
    <br />
    <button class="btn btn-success"> Update CV </button>
}

